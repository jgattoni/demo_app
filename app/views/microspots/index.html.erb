<h1>Listing microspots</h1>

<table>
  <tr>
    <th>Content</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @microspots.each do |microspot| %>
  <tr>
    <td><%= microspot.content %></td>
    <td><%= microspot.user_id %></td>
    <td><%= link_to 'Show', microspot %></td>
    <td><%= link_to 'Edit', edit_microspot_path(microspot) %></td>
    <td><%= link_to 'Destroy', microspot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

